{% extends 'base.html.twig' %}

{% block title %}Article n°{{article.id}}
{% endblock %}

{% block body %}
	<div class="d-flex justify-content-between align-items-center">
		<h1>Article n°{{article.id}}</h1>
		<a href="{{ path('app_back_article_list') }}" class="btn btn-secondary">Retour à la liste</a>
	</div>

	<table class="table my-4">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ article.id }}</td>
			</tr>
			<tr>
				<th>Titre</th>
				<td>{{ article.title }}</td>
			</tr>
			<tr>
				<th>Contenu</th>
				<td>{{ article.content }}</td>
			</tr>
			<tr>
				<th>Date de publication</th>
				<td>{{ article.datePublished ? article.datePublished|date('d-m-Y') : '' }}</td>
			</tr>
		</tbody>
	</table>

	<div class="d-flex justify-content-end align-items-center gap-3">
		<a href="{{ path('app_back_article_edit', {'id': article.id}) }}" class="btn btn-warning">Modifier</a>
		{{ include('back/article/_delete_form.html.twig') }}
	</div>
{% endblock %}
