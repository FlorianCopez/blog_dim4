{% extends 'base.html.twig' %}

{% block title %}Liste des articles
{% endblock %}

{% block body %}
	<div class="d-flex justify-content-between align-items-center">
		<h1>Liste des articles</h1>
		<a href="{{ path('app_back_article_new') }}" class="btn btn-secondary">Ajouter un article</a>
	</div>

	<table class="table my-4">
		<thead>
			<tr>
				<th>ID</th>
				<th class="col-3">Titre</th>
				<th class="col-4">Contenu</th>
				<th class="col-2">Date de publication</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for article in articles %}
				<tr>
					<td>{{ article.id }}</td>
					<td>{{ article.title }}</td>
					<td class="text-truncate" style="max-width: 300px;">{{ article.content }}</td>
					<td>{{ article.datePublished ? article.datePublished|date('d-m-Y') : '' }}</td>
					<td>
						<a href="{{ path('app_back_article_show', {'id': article.id}) }}" class="text-decoration-none fs-2">
							<i class="bi bi-eye-fill"></i>
						</a>
						<a href="{{ path('app_back_article_edit', {'id': article.id}) }}" class="text-decoration-none fs-2">
							<i class="bi bi-pencil-square"></i>
						</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">Pas d'articles trouv√©s</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
